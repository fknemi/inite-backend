{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [],
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./src",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
  ]

}
